# SpatialPathDB Environment Configuration

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=spatialpathdb
POSTGRES_USER=pathdb_user
POSTGRES_PASSWORD=pathdb_pass

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Backend API
API_PORT=8080
API_HOST=0.0.0.0

# Frontend
VITE_API_URL=http://localhost:8080

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Spark (for cluster mode)
SPARK_MASTER=local[*]
SPARK_DRIVER_MEMORY=4g
SPARK_EXECUTOR_MEMORY=4g
